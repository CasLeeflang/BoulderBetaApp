@{
    ViewData["Title"] = "Boulder page";
}

@using DataLibrary.Models;
@using DataLibrary.BusinessLogic;

@model List<BoulderModel>

<link rel="stylesheet" href="~/css/Style.css" />

<body>



    <div class="container-fluid">
        <div class="text-light">
            <div class="text-sm-center">
                <h1 class="brand-font-30">
                    Below is a list of boulders we have a beta for!
                </h1>

                <p class="brand-font mb-0">Can't Find Your Boulder?</p>
                <a class="btn bg-green expand-hover-sm brand-font-dark" asp-area="" asp-controller="Boulder" asp-action="UploadBoulder">Upload a New Boulder</a>

                <div class="container">

                    @{int nOfBoulders = 0; }
                    @foreach (var boulder in Model)
                    {
                        string[] cardcolor = { "card-darkgrey", "card-lightgrey"};


                        <a class="nav-link expand-hover-sm" asp-area="" asp-controller="Home" asp-action="BoulderView" asp-route-id="@boulder.Id">

                            <div class="@cardcolor[nOfBoulders]">
                                <div class="d-inline-flex flex-column text-dark col-auto">
                                    <div class="row">

                                        <div class="card-body d-inline-flex flex-column text-dark col-auto">
                                            <div class="row">
                                                <p class="card-title col-2 brand-font-20-dark">Name</p>
                                                <p class="card-text col-2 brand-font-20-dark">Location</p>
                                            </div>
                                            <div class="row">
                                                <p class="card-title col-2">@boulder.Name</p>
                                                <p class="card-text col-2">@boulder.Location</p>
                                                <div class="circle ml-auto">
                                                    <div class="tag-text brand-font-dark">@boulder.Grade</div>
                                                </div>
                                            </div>
                                        </div>



                                        <div>
                                            <p class="brand-font-30-dark">Placeholder</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </a>
                        nOfBoulders++;
                        if (nOfBoulders > 1)
                        {
                            nOfBoulders = 0;
                        }
                    }
                </div>
            </div>

            @*<div class="dropdown">
                    <button class="dropbtn">Categories</button>
                    <div class="dropdown-content">

                    </div>
                </div>*@

        </div>
    </div>





</body>