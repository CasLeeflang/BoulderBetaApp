@using DataLibrary.Models;
@using DataLibrary.BusinessLogic;



@model List<BoulderModel>
@{
    ViewData["Title"] = "Home Page";

}


<link rel="stylesheet" href="~/css/Style.css" />
<body>

    <div class="container-fluid">
        <div class="text-light">
            <div class="text-sm-center">
                <h1 class="brand-font-40">Welcome!</h1>
                <br />
                <p style="font-size:30px;">
                    Welcome to the Boulder Beta App! Boulder Beta helps you find the best beta for you. Check out the list of boulders users have uploaded a beta for.
                </p>
                <br />


            </div>
        </div>
    </div>

    <div class="container text-light border-top pt-3">
        <div class="row">
            <div class="column align-items-center" style="background-color: #59626c; border-radius: 10px;">
                <p class="brand-font-30">
                    3 Newest Boulders
                </p>
            </div>
        </div>

        @{int nOfBoulders = 0; }
        @foreach (var boulder in Model.Skip(Math.Max(0, Model.Count - 3)))
        {
            string[] cardcolor = { "card-blue", "card-red", "card-green" };


            <a class="nav-link expand-hover-sm" asp-area="" asp-controller="Home" asp-action="BoulderView" asp-route-id="@boulder.Id">

                <div class="@cardcolor[nOfBoulders]">
                    <div class="d-inline-flex flex-column text-dark col-auto">
                        <div class="row">

                            <div class="card-body d-inline-flex flex-column text-dark col-auto">
                                <div class="row">
                                    <p class="card-title col-2 brand-font-20-dark">Name</p>
                                    <p class="card-text col-2 brand-font-20-dark">Location</p>
                                    <p class="card-author col-2 brand-font-20-dark">Grade</p>
                                </div>
                                <div class="row">
                                    <p class="card-title col-2">@boulder.Name</p>
                                    <p class="card-text col-2">@boulder.Location</p>
                                    <p class="card-author col-2">@boulder.Grade</p>
                                </div>
                            </div>



                            <div>
                                <p class="brand-font-30-dark">Placeholder</p>
                            </div>

                        </div>
                    </div>
                </div>
            </a>
            nOfBoulders++;
            if (nOfBoulders > 2)
            {
                nOfBoulders = 0;
            }
        }
    </div>




</body>